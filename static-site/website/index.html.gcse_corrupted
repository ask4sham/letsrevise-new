    <script>
        // Add interactive effects
        document.querySelectorAll('.board-badge').forEach(badge => {
            badge.addEventListener('click', function() {
                const board = this.textContent;
                alert(`Navigating to ${board} content...`);
                window.location.href = `/gcse/?board=${board.toLowerCase()}`;
            });
        });
        
        // Add hover animations to level cards
        document.querySelectorAll('.level-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                const button = this.querySelector('.cta-button');
                button.style.transform = 'translateY(-3px)';
            });
            
            card.addEventListener('mouseleave', function() {
                const button = this.querySelector('.cta-button');
                button.style.transform = 'translateY(0)';
            });
        });
    </script>
