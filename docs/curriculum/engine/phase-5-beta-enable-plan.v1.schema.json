{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "version",
    "purpose",
    "preconditions",
    "enableOrder",
    "flags",
    "verification",
    "rollback"
  ],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["v1"]
    },
    "purpose": {
      "type": "string",
      "minLength": 1
    },
    "preconditions": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "enableOrder": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "flags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "verification": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "rollback": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
