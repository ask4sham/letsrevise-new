{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "version",
    "provider",
    "model",
    "temperature",
    "top_p",
    "max_output_tokens",
    "timeouts",
    "retries",
    "output",
    "safety",
    "hashInputs"
  ],
  "properties": {
    "version": { "type": "string", "const": "openai.v1" },
    "provider": { "type": "string", "const": "openai" },
    "model": { "type": "string", "minLength": 1 },
    "temperature": { "type": "number", "minimum": 0, "maximum": 2 },
    "top_p": { "type": "number", "minimum": 0, "maximum": 1 },
    "max_output_tokens": { "type": "integer", "minimum": 1 },
    "timeouts": {
      "type": "object",
      "required": ["requestMs"],
      "properties": {
        "requestMs": { "type": "integer", "minimum": 1000 }
      },
      "additionalProperties": false
    },
    "retries": {
      "type": "object",
      "required": ["maxAttempts"],
      "properties": {
        "maxAttempts": { "type": "integer", "minimum": 1, "maximum": 5 }
      },
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "required": ["format", "mustMatchSchema"],
      "properties": {
        "format": { "type": "string", "enum": ["json_only"] },
        "mustMatchSchema": {
          "type": "string",
          "const": "docs/curriculum/engine/slot-generation-result.v1.schema.json"
        }
      },
      "additionalProperties": false
    },
    "safety": {
      "type": "object",
      "required": ["defaultRequiresReview", "disallowMarkdown", "disallowCommentary"],
      "properties": {
        "defaultRequiresReview": { "type": "boolean" },
        "disallowMarkdown": { "type": "boolean" },
        "disallowCommentary": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "hashInputs": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    }
  },
  "additionalProperties": false
}

