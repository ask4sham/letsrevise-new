{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "version",
    "executorVersion",
    "jobId",
    "path",
    "status",
    "latencyMs"
  ],
  "properties": {
    "version": { "type": "string", "const": "v1" },
    "executorVersion": { "type": "string", "minLength": 1 },
    "jobId": { "type": "string", "minLength": 1 },
    "path": {
      "type": "string",
      "enum": ["stub", "openai"]
    },
    "status": {
      "type": "string",
      "enum": ["STUB", "COMPLETED", "FAILED"]
    },
    "latencyMs": { "type": "number", "minimum": 0 },
    "errorCode": { "type": ["string", "null"], "minLength": 1 }
  },
  "additionalProperties": false
}

