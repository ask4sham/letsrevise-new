{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://letsrevise.app/schemas/teacher-curriculum-confidence.v1.schema.json",
  "title": "Teacher Curriculum Confidence (v1)",
  "type": "object",
  "required": ["lessonId", "subject", "level", "board", "specVersion", "curriculumCoverage", "review", "provenance"],
  "additionalProperties": false,
  "properties": {
    "lessonId": { "type": "string" },
    "subject": { "type": "string" },
    "level": { "type": "string" },
    "board": { "type": "string" },
    "specVersion": { "type": "string" },
    "curriculumCoverage": {
      "type": "object",
      "required": ["statutory", "examBoard"],
      "additionalProperties": false,
      "properties": {
        "statutory": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["authority", "statementId"],
            "additionalProperties": false,
            "properties": {
              "authority": { "type": "string" },
              "statementId": { "type": "string" }
            }
          }
        },
        "examBoard": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["board", "topic", "specPoint"],
            "additionalProperties": false,
            "properties": {
              "board": { "type": "string" },
              "topic": { "type": "string" },
              "specPoint": { "type": "string" }
            }
          }
        }
      }
    },
    "review": {
      "type": "object",
      "required": ["status", "reviewedBy", "reviewedAt"],
      "additionalProperties": false,
      "properties": {
        "status": {
          "type": "string",
          "enum": ["approved", "pending", "rejected"]
        },
        "reviewedBy": {
          "type": "object",
          "required": ["name", "role", "experienceYears"],
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "role": { "type": "string", "enum": ["teacher"] },
            "experienceYears": { "type": "integer", "minimum": 0 }
          }
        },
        "reviewedAt": { "type": "string", "format": "date-time" }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["aiAssisted", "humanApproved"],
      "additionalProperties": false,
      "properties": {
        "aiAssisted": { "type": "boolean" },
        "humanApproved": { "type": "boolean" }
      }
    }
  }
}
